@model EntityLayer.Concreate.Category

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>yeni kategorı ekleme sayfası</h1>

@using (Html.BeginForm("AddCategoryBL", "Category", FormMethod.Post))
{
    <div class="form-group">

        @Html.Label("kategori adı")
        @Html.TextAreaFor(x => x.CategoryName)
        @Html.ValidationMessageFor(x=>x.CategoryName)

        <br />
        @Html.Label("açıklama yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription)
        @Html.ValidationMessageFor(x=>x.CategoryDescription)
        <br />
        <button class="btn btn-primary">Kaydet</button>

    </div>
}

